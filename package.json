{
  "name": "abbott-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "docker:web": "docker compose -f ./docker-compose-adam-dev.yml up abbott-web",
    "docker:bots": "docker compose -f ./docker-compose-adam-dev.yml up abbott-bots",
    "docker:down": "docker compose -f ./docker-compose-adam-dev.yml down",
    "test": "pnpm --stream -r test",
    "lint": "pnpm -r lint",
    "coverage": "pnpm -r coverage",
    "type-check": "pnpm -r type-check",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tsconfig/node18": "^18.2.2",
    "typescript": "^5.3.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-unicorn": "^50.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "3.1.0"
  }
}
